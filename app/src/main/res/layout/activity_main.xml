<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.sanguo.MainActivity">

    <Button
        android:id="@+id/characterlistadd"
        android:background="@drawable/buttonshaperound"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/colorwhite"
        android:textSize="25sp"
        android:text="@string/add_character_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <SearchView
        android:id="@+id/characterlistsearch"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/characterlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/characterlistsearch" >

    </ListView>

</android.support.constraint.ConstraintLayout>