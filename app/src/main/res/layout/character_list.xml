<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/listlayout"
    android:background="@drawable/listviewbackground"
    android:layout_width="match_parent"
    android:layout_height="77dp"
    tools:context="com.example.asus.sanguo.MainActivity">

    <ImageView
        android:id="@+id/list_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/listviewback2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/list_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/listlayout"
        app:layout_constraintLeft_toLeftOf="@+id/listlayout"
        app:layout_constraintTop_toTopOf="@+id/listlayout"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/list_frame"
        android:layout_width="62dp"
        android:layout_height="67dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/list_image"
        app:layout_constraintEnd_toEndOf="@+id/list_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toEndOf="@+id/list_image"
        android:layout_toRightOf="@+id/list_image"
        android:ems="7"
        android:textSize="16sp"
        android:textColor="#C1B785"
        app:layout_constraintBottom_toBottomOf="@+id/listlayout"
        app:layout_constraintLeft_toRightOf="@+id/list_image"
        app:layout_constraintTop_toTopOf="@+id/listlayout"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/list_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="4"
        android:textColor="#C1B785"
        app:layout_constraintBottom_toBottomOf="@+id/listlayout"
        app:layout_constraintEnd_toEndOf="@+id/listlayout"
        app:layout_constraintStart_toEndOf="@+id/list_name"
        app:layout_constraintTop_toTopOf="@+id/listlayout" />

</android.support.constraint.ConstraintLayout>