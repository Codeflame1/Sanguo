<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.asus.sanguo.MainActivity">

    <TextView
        android:id="@+id/skilldetail_name"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/detailtexthape"
        android:gravity="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/skilldetail_type"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/detailtexthape"
        android:gravity="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/skilldetail_introduction"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/detailtexthape"
        android:inputType="textMultiLine"
        android:maxLines="30"
        android:minLines="5"
        android:scrollbars="vertical"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/skillpro_introduction" />

    <ImageButton
        android:id="@+id/skillback"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@mipmap/back2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/skillpro_name"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/detailproshape"
        android:gravity="center"
        android:text="@string/name"
        android:textColor="@color/colorwhite"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/skilldetail_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/skillpro_type"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/detailproshape"
        android:gravity="center"
        android:text="@string/type"
        android:textColor="@color/colorwhite"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/skilldetail_type"
        app:layout_constraintStart_toStartOf="@id/guideline2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/skillpro_introduction"
        android:layout_width="330dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/detailproshape"
        android:gravity="center"
        android:text="@string/introduction"
        android:textColor="@color/colorwhite"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/skilldetail_level" />

    <TextView
        android:id="@+id/skillpro_level"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/detailproshape"
        android:gravity="center"
        android:text="@string/level"
        android:textColor="@color/colorwhite"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/skillpro_name"
        app:layout_constraintStart_toStartOf="@+id/skillpro_name"
        app:layout_constraintTop_toBottomOf="@+id/skillpro_name" />

    <TextView
        android:id="@+id/skilldetail_level"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/detailtexthape"
        android:gravity="center"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/skillpro_level"
        app:layout_constraintTop_toBottomOf="@+id/skilldetail_name" />

    <ImageView
        android:id="@+id/skilldetail_levellv"
        android:layout_width="190dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/skilldetail_level"
        app:layout_constraintTop_toBottomOf="@+id/skilldetail_name"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/skilldetail_levellvframe"
        android:layout_width="190dp"
        android:layout_height="35dp"
        android:background="@drawable/detailimagestroke"
        app:layout_constraintEnd_toEndOf="@+id/skilldetail_levellv"
        app:layout_constraintStart_toStartOf="@+id/skilldetail_levellv"
        app:layout_constraintTop_toTopOf="@+id/skilldetail_levellv"
        app:layout_constraintBottom_toBottomOf="@+id/skilldetail_levellv"
        tools:ignore="ContentDescription" />


    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="vertical" />

</android.support.constraint.ConstraintLayout>
