<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background"
            tools:context="com.example.asus.sanguo.MainActivity">

            <ImageView
                android:id="@+id/detail_image"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/zhaoyun"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/detail_imageframe"
                android:layout_width="310dp"
                android:layout_height="360dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/archerbig" />

            <TextView
                android:id="@+id/detail_name"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/detailtexthape"
                android:gravity="center"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/detail_introduction"
                app:layout_constraintTop_toBottomOf="@+id/detail_imageframe" />

            <TextView
                android:id="@+id/detail_sex"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/detailtexthape"
                android:gravity="center"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/detail_introduction"
                app:layout_constraintTop_toBottomOf="@+id/detail_name" />

            <TextView
                android:id="@+id/detail_date"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/detailtexthape"
                android:gravity="center"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/detail_introduction"
                app:layout_constraintTop_toBottomOf="@+id/detail_sex" />

            <TextView
                android:id="@+id/detail_origo"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/detailtexthape"
                android:gravity="center"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/detail_introduction"
                app:layout_constraintTop_toBottomOf="@+id/detail_date" />

            <TextView
                android:id="@+id/detail_army"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/detailtexthape"
                android:gravity="center"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/detail_introduction"
                app:layout_constraintTop_toBottomOf="@+id/detail_origo" />

            <TextView
                android:id="@+id/detail_introduction"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/detailtexthape"
                android:inputType="textMultiLine"
                android:maxLines="30"
                android:minLines="5"
                android:scrollbars="vertical"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pro_introduction" />

            <ImageButton
                android:id="@+id/back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="@mipmap/back2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/pro_name"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/detailproshape"
                android:gravity="center"
                android:text="@string/name"
                android:textColor="@color/colorwhite"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/detail_name"
                app:layout_constraintTop_toBottomOf="@+id/detail_imageframe" />

            <TextView
                android:id="@+id/pro_sex"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/detailproshape"
                android:gravity="center"
                android:text="@string/sex"
                android:textColor="@color/colorwhite"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/detail_sex"
                app:layout_constraintTop_toBottomOf="@+id/pro_name" />

            <TextView
                android:id="@+id/pro_date"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/detailproshape"
                android:gravity="center"
                android:text="@string/date"
                android:textColor="@color/colorwhite"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/detail_date"
                app:layout_constraintTop_toBottomOf="@+id/pro_sex" />

            <TextView
                android:id="@+id/pro_origo"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/detailproshape"
                android:gravity="center"
                android:text="@string/origo"
                android:textColor="@color/colorwhite"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/detail_origo"
                app:layout_constraintTop_toBottomOf="@+id/pro_date" />

            <TextView
                android:id="@+id/pro_army"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/detailproshape"
                android:gravity="center"
                android:text="@string/army"
                android:textColor="@color/colorwhite"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/detail_army"
                app:layout_constraintTop_toBottomOf="@+id/pro_origo" />

            <TextView
                android:id="@+id/pro_introduction"
                android:layout_width="160dp"
                android:layout_height="35dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/detailproshape"
                android:gravity="center"
                android:text="@string/introduction"
                android:textColor="@color/colorwhite"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/detail_name"
                app:layout_constraintTop_toBottomOf="@+id/detail_imageframe" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
